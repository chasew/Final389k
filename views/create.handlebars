<h1>Create New Review</h1>
<article>
    <form id="box" method="POST" action="/create">
        <div class="input-field">
            <label>Username:</label>
            <input type="text" name="user" size="50" placeholder="Username">
        </div>
        <div class="input-field">
            <label>Restaurant Name:</label>
            <input type="text" name="restaurant_name" size="50" placeholder="Restaurant Name">
        </div>
        <div class="input-field">
            <label>Slug:</label>
            <input type="text" name="slug" size="50" placeholder="username_restuarant name">
        </div>
        <div class="input-field">
            <label>Tags(Cusine):</label>
            <input type="text" name="tags" size="50" placeholder="Ex. Mexican Tag2 Tag3 (seperated by spaces)">
        </div>
        <div class="input-field">
            <label>Content:</label>
            <textarea type="text" name="content" rows="20" placeholder="Comments..."></textarea>
        </div>
        <div class="input-field">
            <label>Review:</label>
            <input type="text" name="review" size="1" placeholder="0-5">
        </div>

        <button type="submit">Create Blog Post </button>
    </form>

</article>
